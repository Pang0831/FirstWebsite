    /* Make images look premium */
    .image-container {
        position: relative;
        overflow: hidden;
        border-radius: 4px; /* Slight roundness */
        background-color: #f8f9fa;
        aspect-ratio: 16 / 10; /* Better cinematic ratio */
    }
        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    .overlay {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        height: 100%;
        width: 100%;
        opacity: 0;
        transition: .5s ease;
        background-color: rgba(255,255,255,0.8);
        /* These three lines handle the perfect centering */
        display: flex;
        align-items: center;
        justify-content: center;
    }

