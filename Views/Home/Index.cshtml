@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-center">
    <h1 class="display-1 fw-bold main-title">PANG JIA QI</h1>

    <p class="subtitle text-muted">PROJECT PORTFOLIO & CREATIVE DESIGN</p>

    <div class="intro-box mt-5">
        <p class="lead">
            I am a creative designer specializing in
            <strong>User Interface</strong>, <strong>Game Design</strong>, and <strong>Visual Branding</strong>.
        </p>
    </div>
</div>

@model List<Project>

<div class="container mt-5">
    <div class="row g-4">
        @{
            int delay = 1;
        }
 @* Initialize a counter *@
        @foreach (var project in Model)
        {
            <div class="col-md-6 col-lg-4 reveal-wrapper" style="--delay: @(delay);">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@project.Id" class="text-decoration-none text-dark">
                    <div class="project-card">
                        <div class="image-container shadow-sm">
                            <img src="@project.ImageUrl" class="img-fluid" alt="@project.Title">
                            <div class="overlay">
                                <div class="text">VIEW PROJECT</div>
                            </div>
                        </div>
                        <div class="project-info mt-3 text-center">
                            <h5 class="fw-bold" style="letter-spacing: 2px;">@project.Title.ToUpper()</h5>
                            <p class="text-muted small">@project.Tool.ToUpper()</p>
                        </div>
                    </div>
                </a>
            </div>
            delay++;
     @* Increase delay for the next project card *@
        }
    </div>
</div>

