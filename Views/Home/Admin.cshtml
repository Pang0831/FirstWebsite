<div class="container mt-5 fade-in" style="padding-top: 50px;">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="fw-bold" style="letter-spacing: 5px;">INBOX</h1>

        <div class="d-flex align-items-center gap-3">
            <span class="badge bg-dark rounded-0 px-3 py-2">@Model.Count() MESSAGES</span>

            <a href="/Home/Contact/Logout"
               class="btn btn-outline-dark btn-sm rounded-0 fw-bold px-3"
               style="letter-spacing: 1px;">
                LOGOUT
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover border">
            <thead class="table-dark">
                <tr>
                    <th class="py-3 px-4" style="letter-spacing: 2px;">DATE</th>
                    <th class="py-3 px-4" style="letter-spacing: 2px;">NAME</th>
                    <th class="py-3 px-4" style="letter-spacing: 2px;">EMAIL</th>
                    <th class="py-3 px-4" style="letter-spacing: 2px;">MESSAGE</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="py-3 px-4 small">@item.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td class="py-3 px-4 fw-bold">@item.Name.ToUpper()</td>
                        <td class="py-3 px-4">@item.Email</td>
                        <td class="py-3 px-4 text-muted">@item.Message</td>

                        <td class="py-3 px-4">
                            <form asp-action="DeleteMessage" asp-route-id="@item.Id" method="post"
                                  onsubmit="return confirm('Are you sure you want to delete this message?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger rounded-0 border-0">
                                    DELETE
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table td, .table th {
        vertical-align: middle;
        border-color: #eee;
    }

    .fade-in {
        animation: fadeIn 1s ease-in;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>