    .project-detail-container {
        background: #fdfdfd;
        border-radius: 24px;
        overflow: hidden;
        /* Using aspect-ratio prevents the "giant" look */
        aspect-ratio: 16 / 9;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px; /* This creates "breathing room" around the logo */
    }

    .project-detail-img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain; /* Ensures the logo isn't cropped */
        transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
    }

    .zoom-box:hover .project-detail-img {
        transform: scale(1.1);
    }

    /* Ensure your reveal-wrapper delays work correctly */
    .reveal-wrapper {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.8s ease-out;
    }

        .reveal-wrapper.active {
            opacity: 1;
            transform: translateY(0);
            transition-delay: calc(var(--delay) * 0.15s);
        }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const observerOptions = {
            threshold: 0.1
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.classList.add("active");
                } else {
                    entry.target.classList.remove("active");
                }
            });
        }, observerOptions);

        // Corrected selection and loop
        const revealElements = document.querySelectorAll(".reveal-wrapper");
        revealElements.forEach((el) => {
            observer.observe(el);
        });
    });
</script>